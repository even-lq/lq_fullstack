.border-line {
  content: '';
  display: block;
  height: 2rpx;
  background-color: #eeee;
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
}
.border-none {
  content: '';
  display: block;
  height: 0rpx;
}
.border-right-line {
  content: '';
  display: block;
  width: 2rpx;
  background-color: #eeee;
  position: absolute;
  top: 40rpx;
  left: 100%;
  bottom: 40rpx;
}
.border-right-none {
  content: '';
  display: block;
  width: 0rpx;
}
.campus-order__indent {
  min-height: 100vh;
}
.campus-order__indent .swiper-item_content {
  height: calc(100vh - 110rpx - 100rpx);
}
.campus-order__indent .red {
  background-color: red;
}
.campus-order__indent .blue {
