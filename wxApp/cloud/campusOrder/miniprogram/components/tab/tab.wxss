.border-line {
  content: '';
  display: block;
  height: 2rpx;
  background-color: #eeee;
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
}
.border-none {
  content: '';
  display: block;
  height: 0rpx;
}
.border-right-line {
  content: '';
  display: block;
  width: 2rpx;
  background-color: #eeee;
  position: absolute;
  top: 40rpx;
  left: 100%;
  bottom: 40rpx;
}
.border-right-none {
  content: '';
  display: block;
  width: 0rpx;
}
.tab {
  height: 88rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-around;
  font-size: 36rpx;
}
.tabItem {
  line-height: 88rpx;
  text-align: center;
  flex: 1;
  -webkit-box-flex: 1;
}
.tabItem.order {
  border-bottom: 4rpx solid #2ba4f5;
}
