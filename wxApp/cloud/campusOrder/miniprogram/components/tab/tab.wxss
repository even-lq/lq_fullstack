.border-line {
  content: '';
  display: block;
  height: 2rpx;
  background-color: #eeee;
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
}
.border-none {
  content: '';
  display: block;
  height: 0rpx;
}
.border-right-line {
  content: '';
  display: block;
  width: 2rpx;
  background-color: #eeee;
  position: absolute;
  top: 40rpx;
  left: 100%;
  bottom: 40rpx;
}
.border-right-none {
  content: '';
  display: block;
  width: 0rpx;
}
.tab {
  position: relative;
  height: 88rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-around;
  font-size: 36rpx;
}
.tab-item {
  line-height: 88rpx;
  text-align: center;
  flex: 1;
  -webkit-box-flex: 1;
}
.tab-line {
  justify-self: flex-start;
  position: absolute;
  bottom: 15rpx;
  left: 0;
  z-index: 1;
  height: 6rpx;
  background-color: #ee0a24;
  border-radius: 6rpx;
  transition: 0.3s;
}
