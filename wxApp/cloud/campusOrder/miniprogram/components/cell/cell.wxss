.border-line {
  content: '';
  display: block;
  height: 2rpx;
  background-color: #eeee;
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
}
.border-none {
  content: '';
  display: block;
  height: 0rpx;
}
.border-right-line {
  content: '';
  display: block;
  width: 2rpx;
  background-color: #eeee;
  position: absolute;
  top: 40rpx;
  left: 100%;
  bottom: 40rpx;
}
.border-right-none {
  content: '';
  display: block;
  width: 0rpx;
}
.cell {
  width: 100%;
  padding: 0 15rpx;
  background-color: #fff;
}
.cell .cell-item {
  height: 130rpx;
  font-size: 32rpx;
  border-bottom: 2rpx solid #eeee;
  position: relative;
}
.cell .cell-item .label {
  padding: 0 60rpx 0 20rpx;
  line-height: 130rpx;
  font-weight: bold;
}
.cell .cell-item .cell-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
  display: inline-block;
  width: 180rpx;
  line-height: 1;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  font-size: 36rpx;
  color: #2ba4f5;
  border-color: #2ba4f5;
}
.cell .cell-item .highlight {
  color: rgba(43, 164, 245, 0.6);
  border-color: rgba(43, 164, 245, 0.6);
}
.cell .cell-item:last-child {
  border: none;
}
