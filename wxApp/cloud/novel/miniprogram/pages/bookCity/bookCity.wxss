.header{
  display: flex;
  margin-top: 40rpx;
}
.hot{
  font-size: 40rpx;
  font-weight: bold;
  color: #68aac2;
  width: 200rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 12rpx;
}
.more{
  flex: 1;
  text-align: center;
  padding: 12rpx;
  color: #be3948;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.hotlist{
  display: flex;
  margin: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #FEF9EF;
  border-radius: 4px;
  border: 1px solid #D7D7D7;
}
.hotlist .itemleft{
  width: 200rpx;
  height: 260rpx;
}
.hotlist .itemleft image{
  width: 200rpx;
  height: 260rpx;
}
.hotlist .itemright{
  flex: 1;
  margin-left: 10rpx;
  color: #AAA;
}
.itemright .bookname{
  color: #222;
  font-weight: 700;
}
.itemright .autho{
  float: right;
}
.itemright .authotop{
  padding-bottom: 14rpx;
}
.itemright .detail{
  height: 120rpx;
  line-height: 40rpx;
  padding: 14rpx 0;
  
}
/* 推荐类别 */
.classify{
  /* padding: 12rpx; */
  /* color: #fff; */
  font-size: 32rpx;
  color: #888;
  /* margin: 16rpx 0; */
}
.classify .classifyname{
  font-weight: 500;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #f6f6f6;
  border-top: 1px solid #D7D7D7;
  border-bottom: 1px solid #D7D7D7;
  padding-left: 20rpx;
  color: #222;
}
.classify .classifyitem{
 background: #fff;
 padding-left: 20rpx;
 padding-right: 20rpx;
 font-size: 28rpx;
 /* border-bottom: 1px solid #DDDDDD; */
 height: 72rpx;
 line-height: 72rpx;
 /* overflow: hidden; */
 position: relative;
}
.classify .classifyitem:not(:first-child)::after{
 position: absolute;
 content: '';
 border-top: 1rpx solid rgba(0, 0, 0, 0.4);
 height: 72rpx;
 left: 20rpx;
 right: 20rpx;
}
.classify .classifyitem:last-child::after{
 border-bottom: 1rpx solid rgba(0, 0, 0, 0.4);
}
.classify .classifyitem:last-child{
 padding-bottom: 40rpx;
}
.classify .sname{
  font-size: 28rpx;
  text-align: left;
  color:#6F78A7
}
.classify .sautho{
  font-size: 28rpx;
  float: right;
}