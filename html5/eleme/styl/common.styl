border-1px($color)
  position relative
  &:after
    content ""
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    transform scaleY(.3)
    transform-origin 0 100%
.ele-tab
  display flex
  width 100%
  height 40px
  line-height 40px
  border-1px(rgb(7, 17, 27 0.1))