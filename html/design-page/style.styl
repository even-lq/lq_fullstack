*
  margin 0
  padding 0
@font-face
  font-family Exo-Thin
  src url('./font/Exo-Thin.ttf')
@font-face
  font-family Exo-Medium
  src url('./font/Exo-Medium.ttf')
@font-face
  font-family Exo-Regular-Italic
  src url('./font/Exo-Regular-Italic.otf')
triangle($rdeg) 
  position relative
  overflow hidden
  &:after
    position absolute
    bottom 0
    content ''
    width 0
    height 0
    border 1000px solid
    border-color: transparent transparent #FB8686;
    transform-origin bottom left
    transform rotate($rdeg)
button
  margin 0
  padding 0
  border none
  background-color transparent
  outline none
.page
  width 100%
  min-width 1200px
header 
  width 100%
  box-sizing border-box
  padding 218px 350px
  text-align center
  background url("./image/section1-bg.png") no-repeat
  background-size 100% auto
  .content
    .title
      width 100%
      font-family Exo-Thin
      font-size 60px
      line-height 75px
      letter-spacing 2px
      color #282828
      word-wrap break-word
    .play
      img 
        width 60px
        height 60px
        margin 32px 0px
    .button
      button
        width 190px
        height 50px
        background-color #ff6d6d
        color #fff
        border-radius 3px
        cursor pointer
        font-size 16px
        letter-spacing 3px
      p
        margin-top 18px
        font-size 14px
        color #282828
        opacity 0.6
.section-first
  margin-top 0
  display flex 
  font-family Exo-Medium 
  .left
    flex 3
    padding 180px 150px 
    .title
      color: #ff6d6d
      font-size 16px
    .subhead
      font-size 40px
    .article
      margin-top 40px
      line-height 26px
      color #282828
	    opacity 0.66
  .right
    flex 2
    background-color #ededed
    triangle(15deg) 
.section-second
  background url('./image/pen-holder.png')
  background-size cover
  background-color #f6f5f3
  font-family Exo-Medium
  position relative
  .earphones
    position absolute
    right 180px
  .head
    text-align center
    padding-top 140px
    .badge
      font-size 16px
      color #ff6d6d
    .title
      font-size 40px
  .content
    padding 0 160px 200px 160px
    margin-top 90px
    display flex
    .content-item
      flex 1
      text-align center
      .title
        font-size 22px
        margin-top 20px
      .content-p
        font-size 16px
        margin-top 20px
        color #282828
        opacity 0.66
        line-height 26px
.section-third
  z-index 9
  box-sizing border-box
  width 100%
  overflow hidden
  font-family Exo-Medium 
  padding 100px 150px 150px 65px
  position relative
  .triangle
    z-index -1
    position absolute
    top -100px
    left 0
    content ''
    width 0
    height 0
    border-top: 750px solid transparent;
    border-left: 750px solid #FB8686;
  .img
    z-index 6
    width 630px
    height 400px
    float left
    background url('./image/macbook.png') no-repeat 
  .content
    padding 40px 0 0 700px
    .title
      color: #ff6d6d
      font-size 16px
    .subhead
      font-size 40px
      margin-top 25px
    .article
      font-size 16px
      margin-top 35px
      line-height 26px
      color #282828
	    opacity 0.66
.section-fourth
  background url('./image/back-bg.png')
  background-size cover
  padding 110px 150px
  font-family Exo-Medium
  letter-spacing 1px
  .people
    text-align center
    .people-item
      display inline-block
      width 30%
      height 60%
      text-align center
      img 
        width 76px
      .title
        font-size 22px
        line-height 50px
        color #ffffff
      .subhead
        line-height 50px
        font-size 16px
        color: #ff6d6d
      .content
        display inline-block
        font-family Exo-Regular-Italic
        font-size 16px
        color #ffffff
        opacity 0.66
        line-height 26px
        vertical-align top
        // text-align justify
    .people-item + .people-item
      margin-left 3%
  .icon
    margin-top 12%
    text-align center
    img 
      height 85px
      color #A6A7A9
    img + img
      margin-left 9%
.section-fifth
  width 100%
  position relative
  .content
    width 50%
    text-align center
    margin 0 auto
    .title
      margin-top 6%
      font-family Exo-Medium
      font-size 16px
      line-height 50px
      letter-spacing 3px
      color #ff6d6d
    .subhead
      font-family Exo-Medium
      font-size 40px
      line-height 50px
      letter-spacing 2px
      color #282828
    .content-son
      margin-top 6%
      margin-bottom 15%
      font-family Exo-Medium
      font-size 16px
      line-height 26px
      letter-spacing 1px
      color #282828
      opacity 0.66
  img 
    position absolute
    left 0
    right 0
    margin 0 auto



    
  




